<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:theme="@style/AppTheme"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="toulouse.insa.smartcontrol.viewactivities.CreateRule">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:id="@+id/view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/show_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title of the Rule"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/show_title"
                    android:hint="Title of this rule"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/policy_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_title"
                    android:text="Policy"
                    android:textSize="15dp"/>

                <CheckBox
                    android:id="@+id/policy_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_title" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:layout_marginLeft="62dp"
                    android:layout_marginStart="62dp"/>

                <ExpandableListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/policy_list"
                    android:layout_below="@id/policy_check"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/show_trigger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/policy_list"
                    android:text="Triggers"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/edit_trigger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/show_trigger"
                    android:hint="Triggers for this rule"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/show_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_trigger"
                    android:text="Actions"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/edit_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/show_action"
                    android:hint="Actions to trigger"
                    android:textSize="15dp"/>



                <Button
                    android:id="@+id/create_rule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_action"
                    android:text="Create"
                    android:onClick="CommitRule"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</LinearLayout>